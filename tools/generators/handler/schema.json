{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "handler",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Handler name",
      "x-prompt": "What is the name of the handler?",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "project": {
      "type": "string",
      "description": "Project name",
      "x-prompt": "What is the name of the project?"
    }
  },
  "required": [
    "name",
    "project"
  ]
}